@model PicturyMarket.Domain.ViewModels.Order.OrderViewModel

<div class="row">
    <div class="col-md-12">
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model?.Image ?? Array.Empty<byte>())"
             class="img-fluid rounded-start rounded">
    </div>
    <div class="col-md-6">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Картины: @Model.PicturyTitle</li>
            <li class="list-group-item">Жанр: @Model.Genre</li>
        </ul>
    </div>
    <div class="col-md-6">
        <ul class="list-group list-group-flush">
           <li class="list-group-item">ФИО: @Model.Name @Model.Surname.Substring(0, 1)</li>
            <li class="list-group-item">Дата создания: @Model.DateCreate</li>
       </ul> 
    </div>
</div>